<div id="page-wrapper">
  <div id="categories_page">
    {#
    <header id="header" class="header container-fluid" role="banner" aria-label="{{ 'Site header'|t}}">
      {% block head %}
        <div class="row">
          <div class="col-md-2 py-2 px-3 text-center">
            {{ page.site_branding }}
          </div>
          <div class="col-md-6  py-2 px-3 text-center">
            {{ page.product_search }}
          </div>
          <div class="col-md-2  py-2 px-3 text-center">
            {{ page.cart_block }}
          </div>
          <div class="col-md-2  py-2 px-3 text-center">
            {{ page.account_block }}
          </div>
      </div>
      {% endblock %}
    </header>
    #}
    <nav class="navbar navbar-dark navbar-expand-sm bg-light container-fluid py-0">
      <button class="navbar-toggler bg-evms-submit" type="button" data-toggle="collapse" data-target="#Navbar">
        <span class="fa fa-lg fa-bars text-light"></span>
      </button>
      <div class="py-1 px-3 text-center">
        {{ page.site_branding }}
      </div>
      <div class="collapse navbar-collapse" id="Navbar">
        <div class="col-md-7  pb-1 px-3  pt-4 text-center">
          {{ page.product_search }}
        </div>
        <div class="col-md-2  py-1 px-3 text-center">
          {{ page.cart_block }}
        </div>
        <div class="col-md-3  py-1 px-3 text-center">
          {{ page.account_block }}
        </div>
      </div>
    </nav>
    {% if page.highlighted %}
      <div class="highlighted">
        <aside class="{{ container }} section clearfix" role="complementary">
          {{ page.highlighted }}
        </aside>
      </div>
    {% endif %}
    {% if page.featured_top %}
    {% block featured %}
      <div class="featured-top">
        <aside class="featured-top__inner section {{ container }} clearfix" role="complementary">
          {{ page.featured_top }}
        </aside>
      </div>
    {% endblock %}
    {% endif %}
    <div id="main-wrapper" class="layout-main-wrapper clearfix">
      {% block content %}
      <div id="main" class="{{ container }}">
        <div class="row row-offcanvas row-offcanvas-left clearfix">
          {% if page.sidebar_first %}
          <div{{ sidebar_first_attributes }}>
            <aside class="section" role="complementary">
              {{ page.sidebar_first }}
            </aside>
          </div>
          {% endif %}
          <main{{ content_attributes }}>
          <div class="row mx-0">
            <div class="col-md-6">
              {{ page.breadcrumb }}
            </div>
            <div class="col-md-6 sort_by_block">
              {{ page.sort_by_block }}
            </div>
          </div>
            <section class="section">
              <a id="main-content" tabindex="-1"></a>
              {{ page.content }}
            </section>
          </main>
          {% if page.sidebar_second %}
            <div{{ sidebar_second_attributes }}>
              <aside class="section" role="complementary">
                {{ page.sidebar_second }}
              </aside>
            </div>
          {% endif %}
        </div>
      </div>
      {% endblock %}
    </div>
    <footer class="site-footer container-fluid">
      {% block footer %}
      <div class="container">
        {% if page.featured_first %}
          {{ page.featured_first }}
        {% endif %}
        <div class="row">
          {% if page.footer_categories %}
          <div class="col-md-5 border border-left-0 border-evms-border py-4">
            {{ page.footer_categories }}
          </div>
          {% endif %}
          {% if page.footer_useful_links %}
          <div class="col-md-4 border border-left-0 border-evms-border py-4">
            {{ page.footer_useful_links }}
          </div>
          {% endif %}
          {% if page.footer_follow_us %}
          <div class="col-md-3 border-top border-bottom border-evms-border py-4">
            {{ page.footer_follow_us }}
          </div>
          {% endif %}
        </div>
        {% if page.footer_brands %}
          {{ page.footer_brands }}
        {% endif %}
        {% if page.featured_second %}
          {{ page.featured_second }}
        {% endif %}
        {% if page.footer_powered_by %}
          {{ page.footer_powered_by }}
        {% endif %}
      {% endblock %}
      </div>
    </footer>
</div>
</div>