<div class="container">
<div class="sub_total row">
<div class="sub_total_text">Sub Total</div>
<div class="amount">  <% print(cart.total_price.formatted) %> </div>
</div>
</div>

<div class="table-wrapper-scroll-y my-custom-scrollbar">
<table class="table cart_table">
<tbody>
 <% _.each(cart.order_items, function(orderItem, key) { %>
        <tr class="table_row">
            <td>
            <div class="cart_items container">
            <div class = "row">
              <div class="discount_percentage"><% print(orderItem.purchased_entity.field_discount_percentage) %></div>
              <div class="cart-block--offcanvas-cart-table__remove">
              <button value="<% print(JSON.stringify([cart.order_id, orderItem.order_item_id]))  %>" class=" remove_button btn"><span class="fa fa-times" style="color:black"><span></button>
            </div>
            </div>
            <div class="cart-block--offcanvas-cart-table__title title row"><%- orderItem.title %></div>
            <div class="row priceblock">
            <div class="cart-block--offcanvas-cart-table__quantity">
            <input type="number" min="1" name="quantity" value="<% print(parseInt(orderItem.quantity)) %>"  data-key="<% print(key) %>">
            </div>
             <div class="price"> X <% print(orderItem.purchased_entity.price.formatted) %></div>
             <div class="old_price"><del><% print(orderItem.purchased_entity.field_old_price.formatted) %></del></div>
              <div class="cart-block--offcanvas-cart-table__price total_price"><%= orderItem.total_price.formatted %></div>
            </div>
            </div>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>
</div>
<div class="row container extra_button">
<div class="col-6">
<button class="visit_cart" onclick="location.href='/cart'">Visit Cart</button></div>
<div class="col-6">
<button type="submit" class="cart-block--offcanvas-contents__update button btn update_cart">Update Cart</button>
</div>
</div>
<div class="checkout container">
<button onclick="location.href='/checkout/<% print(JSON.stringify(cart.order_id)) %>'" class="checkout_button">
<span><span style="text-align:left;">Processed to Checkout </span><span style="float:right;"><% print(cart.total_price.formatted) %> <span class="fa fa-angle-right"></span> <span></span></button>
</div>

