<div class="dropdown">
  <a class="btn btn-evms-submit dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  {{ title }}
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    {% if login_link %}
      {{ login_link }}
    {% endif %}
    {% if signin_link %}
      {{ signin_link }}
    {% endif %}
    {% if address_link %}
      {{ address_link }}
    {% endif %}
    {% if order_link %}
      {{ order_link }}
    {% endif %} 
    {% if logout_link %}
      <div class="dropdown-divider"></div>
      {{ logout_link }}
      </div>
    {% endif %}
    
</div>